set nocompatible

filetype off

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" Let Vundle manage Vundle
Bundle 'gmarik/vundle'

" Rename Files In Buffer
Bundle 'danro/rename.vim'

" Coffeescript Compatability
Bundle 'kchmck/vim-coffee-script'

" Searches
Bundle 'kien/ctrlp.vim'
Bundle 'Lokaltog/vim-easymotion'

" Syntax highlighting in open buffers
Bundle 'scrooloose/syntastic'

" Rspec Runner for VIM
Bundle 'thoughtbot/vim-rspec'

" Adds end automatically in ruby
Bundle 'tpope/vim-endwise'

" Git things in the terminal
Bundle 'tpope/vim-fugitive'

" Tim Pope makes working with rails and vim so easy
Bundle 'tpope/vim-rails'

" Visual feedback that highlights opens and closes
Bundle 'tsaleh/vim-matchit'

" Handy for bouncing around method definitions
Bundle 'vim-scripts/ctags.vim'

" Quick Comments!
Bundle 'vim-scripts/tComment'

" add and change things that wrap other things
Bundle 'tpope/vim-surround'

" Powerline
Bundle 'Lokaltog/vim-powerline'
Bundle 'stephenmckinney/vim-solarized-powerline'

" Color Scheme
Bundle 'akmassey/vim-codeschool'
Bundle 'altercation/vim-colors-solarized'
Bundle 'croaky/vim-colors-github'
Bundle 'rking/vim-detailed'

" NERDTree
Bundle 'scrooloose/nerdtree'

" Auto Paring
Bundle 'jiangmiao/auto-pairs'

" Relative Number Toggle
Bundle 'jeffkreeftmeijer/vim-numbertoggle'

" Useful Clojure Plugins
Bundle 'tpope/vim-fireplace'
Bundle 'tpope/vim-classpath'
Bundle 'guns/vim-clojure-static'
Bundle 'kien/rainbow_parentheses.vim'

" Vim Diff
Bundle 'airblade/vim-gitgutter'

call vundle#end()

filetype on
